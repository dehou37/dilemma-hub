datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  dilemmas  Dilemma[]
  comments  Comment[]
  votes     Vote[]
}

model Dilemma {
  id          String    @id @default(cuid())
  title       String
  description String
  category    Category  @default(OTHER)
  options     String[]
  author      User      @relation(fields: [authorId], references: [id])
  authorId    String
  votes       Vote[]
  comments    Comment[]
  createdAt   DateTime  @default(now())
}

enum Category {
  ETHICS
  TECHNOLOGY
  PERSONAL
  WORK
  POLITICS
  LIFESTYLE
  OTHER
}

model Vote {
  id         String    @id @default(cuid())
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  dilemma    Dilemma   @relation(fields: [dilemmaId], references: [id])
  dilemmaId  String
  option     Int
  createdAt  DateTime  @default(now())

  @@unique([userId, dilemmaId])
}

model Comment {
  id         String    @id @default(cuid())
  content    String
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  dilemma    Dilemma   @relation(fields: [dilemmaId], references: [id])
  dilemmaId  String
  createdAt  DateTime  @default(now())
}
